{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TFWS v2 Key History",
  "type": "object",
  "required": ["schema_version", "keys"],
  "properties": {
    "schema_version": { "type": "string", "enum": ["2.0"] },
    "keys": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["kid", "pubkey_path", "not_before", "status"],
        "properties": {
          "kid": { "type": "string", "minLength": 3 },
          "pubkey_path": { "type": "string", "minLength": 3 },
          "not_before": { "type": "string", "format": "date-time" },
          "not_after": { "type": "string", "format": "date-time" },
          "status": { "type": "string", "enum": ["active", "retired", "revoked"] },
          "notes": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
